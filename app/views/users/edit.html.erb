
<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="user_Name">Name</label>
  <%= f.text_field :name, autofocus: true, id: "user_Name", placeholder:"名前" %>
  <label for="Image">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="user_Introduction">Introduction</label>
  <%= f.text_field :Introduction, autofocus: true, id: "user_Introduction" , placeholder:"自己紹介" %>
  <%= f.submit "Updatection" %>
<% end %>